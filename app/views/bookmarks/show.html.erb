<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @bookmark.movie.title %></h5>
      <p>List: <%= @bookmark.list.name %></p>
      <p>Comment: <%= @bookmark.comment %></p>
      <%= link_to "Edit", edit_bookmark_path(@bookmark), class: "btn btn-secondary" %>
      <%= link_to "Delete", bookmark_path(@bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" }, class: "btn btn-secondary" %>
      <%= link_to "Back", list_path(@bookmark.list), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
